<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/std_keyboard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:visibility="visible"
    tools:visibility="visible">


    <Button
        android:id="@+id/buttonC"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonSign"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonC"
        android:layout_toRightOf="@id/buttonC"
        android:text="\u00b1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonPercent"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonC"
        android:layout_toRightOf="@id/buttonSign"
        android:text="%"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonDiv"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@id/buttonC"
        android:layout_toRightOf="@id/buttonPercent"
        android:text="\u00f7"
        android:textSize="30sp"
        android:theme="@style/ActionButtonsTheme" />

    <Button
        android:id="@+id/button7"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_alignLeft="@id/buttonC"
        android:text="7"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button8"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_toRightOf="@id/button7"
        android:text="8"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button9"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_toRightOf="@id/button8"
        android:text="9"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonMul"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/buttonC"
        android:layout_toRightOf="@id/button9"
        android:text="\u00d7"
        android:textSize="30sp"
        android:theme="@style/ActionButtonsTheme" />

    <Button
        android:id="@+id/button4"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:layout_alignLeft="@id/button7"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button5"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:layout_toRightOf="@id/button4"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button6"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:layout_toRightOf="@id/button5"
        android:text="6"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonMinus"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button7"
        android:layout_toRightOf="@id/button6"
        android:text="-"
        android:textSize="30sp"
        android:theme="@style/ActionButtonsTheme" />

    <Button
        android:id="@+id/button1"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_alignLeft="@id/button4"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button2"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/button1"
        android:text="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/button3"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/button2"
        android:text="3"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonPlus"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button4"
        android:layout_toRightOf="@id/button3"
        android:text="+"
        android:textSize="30sp"
        android:theme="@style/ActionButtonsTheme" />

    <Button
        android:id="@+id/button0"
        tools:ignore="HardcodedText"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_below="@id/button1"
        android:layout_alignLeft="@id/button1"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonDot"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button1"
        android:layout_toRightOf="@id/button0"
        android:text="."
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonEqual"
        tools:ignore="HardcodedText"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/button1"
        android:layout_toRightOf="@id/buttonDot"
        android:text="="
        android:textSize="30sp"
        android:theme="@style/ActionButtonsTheme" />
</RelativeLayout>


